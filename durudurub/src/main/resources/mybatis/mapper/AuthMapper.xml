<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 회원 권한 매퍼 XML -->
<mapper namespace="com.aloha.durudurub.dao.AuthMapper">

    <resultMap id="AuthMap" type="com.aloha.durudurub.dto.Auth">
        <id property="no" column="no"/>
        <result property="userNo" column="user_no"/>
        <result property="auth" column="auth"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 특정 회원 권한 목록 조회 -->
    <select id="selectByUserNo" parameterType="int" resultMap="AuthMap">
        SELECT
            no, user_no, auth, created_at, updated_at
        FROM user_auth
        WHERE user_no = #{userNo}
    </select>

    <!-- 회원가입 시 권한 등록 -->
    <insert id="insert">
        INSERT INTO user_auth (user_no, auth)
        VALUES (#{userNo}, #{auth})
    </insert>
</mapper>

