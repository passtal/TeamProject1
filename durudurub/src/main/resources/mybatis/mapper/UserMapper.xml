<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 회원 매퍼 XML -->
<mapper namespace="com.aloha.durudurub.dao.UserMapper">
    
    <!-- 회원 결과 매핑 (권한 목록 포함) -->
    <resultMap id="userResultMap" type="com.aloha.durudurub.dto.User">
        <id property="no" column="no"/>
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="password" column="password"/>
        <result property="username" column="username"/>
        <result property="profileImg" column="profile_img"/>
        <result property="age" column="age"/>
        <result property="gender" column="gender"/>
        <result property="address" column="address"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <collection property="authList" javaType="java.util.ArrayList" 
                    ofType="com.aloha.durudurub.dto.Auth"
                    column="no" select="com.aloha.durudurub.dao.AuthMapper.listByUserNo"/>
    </resultMap>
    
    <!-- 회원 목록 조회 -->
    <select id="list" resultMap="userResultMap">
        SELECT *
        FROM users
        ORDER BY created_at DESC
    </select>
    
    <!-- 회원 조회 (번호로) -->
    <select id="selectByNo" resultMap="userResultMap">
        SELECT *
        FROM users
        WHERE no = #{no}
    </select>
    
    <!-- 회원 조회 (아이디로) -->
    <select id="selectByUserId" resultMap="userResultMap">
        SELECT *
        FROM users
        WHERE user_id = #{userId}
    </select>
    
    <!-- 회원 조회 (닉네임으로) -->
    <select id="selectByUsername" resultMap="userResultMap">
        SELECT *
        FROM users
        WHERE username = #{username}
    </select>
    
    <!-- 회원 등록 -->
    <insert id="insert" parameterType="com.aloha.durudurub.dto.User" useGeneratedKeys="true" keyProperty="no">
        INSERT INTO users (id, user_id, password, username, profile_img, age, gender, address)
        VALUES (
            UUID(),
            #{userId},
            #{password},
            #{username},
            COALESCE(#{profileImg}, '/static/img/default-profile.png'),
            #{age},
            COALESCE(#{gender}, '공개안함'),
            #{address}
        )
    </insert>
    
    <!-- 회원 수정 -->
    <update id="update" parameterType="com.aloha.durudurub.dto.User">
        UPDATE users
        SET username = #{username},
            age = #{age},
            gender = #{gender},
            address = #{address}
        WHERE no = #{no}
    </update>
    
    <!-- 회원 삭제 -->
    <delete id="delete">
        DELETE FROM users
        WHERE no = #{no}
    </delete>
    
    <!-- 비밀번호 변경 -->
    <update id="updatePassword">
        UPDATE users
        SET password = #{password}
        WHERE no = #{no}
    </update>
    
    <!-- 프로필 이미지 변경 -->
    <update id="updateProfileImg">
        UPDATE users
        SET profile_img = #{profileImg}
        WHERE no = #{no}
    </update>
    
    <!-- 아이디 중복 체크 -->
    <select id="countByUserId" resultType="int">
        SELECT COUNT(*)
        FROM users
        WHERE user_id = #{userId}
    </select>
    
    <!-- 닉네임 중복 체크 -->
    <select id="countByUsername" resultType="int">
        SELECT COUNT(*)
        FROM users
        WHERE username = #{username}
    </select>
    
</mapper>